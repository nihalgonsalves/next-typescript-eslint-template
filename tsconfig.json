{
  "extends": "@nihalgonsalves/esconfig",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "incremental": false
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"]
}
